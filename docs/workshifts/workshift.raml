#%RAML 0.8
displayName: Workshifts
description: Resource that manages the processes related to workshifts.

get:
    description: Return workshift information 
    responses:
        200:
            description: Successfull request
            body: 
                example: !include workshift-array-example.json
        400:
            description: Incorrect format
            body:
                example: !include ../examples/bad-request-example.json
post:
    description: Add a new workshift
    body:
        schema: Workshift
        example: !include workshift-example.json
    responses:
        201:
            description: Successfull request
            body:
                example: !include workshift-example.json
        400:
            description: Incorrect format
            body:
                example: !include ../examples/bad-request-example.json
put:
    description: Update work shift information by messenger ID provided
    body:
        schema: Workshift
        example: !include workshift-example.json
    responses:
        200:
            description: Successfull request
            body:
                example: !include workshift-example.json
        400:
            description: Incorrect format
            body:
                example: !include ../examples/bad-request-example.json
