            description: Workshift not found
            body:
                example: !include ../examples/not-found-example.json
/{workshiftId}:
    uriParameters:
            workshiftId:
                displayName: Workshift id.
                type: integer
    get:
        description: Returns a specific workshift information by ID.
        responses:
            200:
                description: Successfull request
                body:
                    example: !include workshift-example.json
            404:
                description: Workshift not found
                body:
                    example: !include ../examples/not-found-example.json